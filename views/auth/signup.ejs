<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-blue-600 mb-8 text-center">Register new user</h1>
      <div class="flex justify-center">
        <form action="/signup" method="POST" class="w-full max-w-md">

       <%- include('../partials/errors') %>
          <input 
            type="text" 
            name="FirstName"
            placeholder="Enter your firstname"
            value = "<%= oldInput.FirstName ? oldInput.FirstName : '' %>"
            class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required/>

          <input 
          type="text" 
          name="LastName"
          value = "<%= oldInput.LastName ? oldInput.LastName : '' %>"
          placeholder="Enter your lastname"
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
        />

        <input 
        type="text" 
        name="Email"
        value = "<%= oldInput.Email ? oldInput.Email : '' %>"
        placeholder="Enter your email"
        class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
      required/>

          <input type="password" 
          name="Password" 
          method="POST" 
          placeholder="Enter your password" 
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" required/>

          <input type="password"
          name="confirmPassword" 
          method="POST" 
          placeholder="Confirm password" 
          class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" required/>

          <!--Radio button-->
          <div class="flex items-center space-x-4 mb-4">
            <label class="flex items-center">
              <input type="radio" 
              name="userType" 
              value="guest"
              id = "guest"
              class="mr-2" 
               />
              <span style="margin-right: 20px; margin-left: 5px;">Guest</span>
            </label>
            
            <label class="flex items-center">
              <input type="radio" 
              name="userType" 
              id = "host"
              class="mr-2"
               value="host"
               />
              <span>Host</span>
            </label>
          </div>
          

          <input type="checkbox" name="terms" method="POST" class="px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"> <span>Terms & Condition apply</span> </input>
          
          <div class="flex justify-center">
            <input 
              type="submit" 
              value="Register"
              class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer"
            >
          </div>
          <br>
          <div style="display: flex; justify-content: center;">
              <span>Already Have an account? </span><a href="/login" style="color: rgb(56, 56, 247); font-weight: 600; margin-left: 5px;"> Sign in</a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>