<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-blue-600 mb-8 text-center">Edit your Home</h1>
      <div class="flex justify-center">
        <form action="/host/edit-home" method="POST" class="w-full max-w-md">
          <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />
          <input 
            type="text" 
            name="houseName"
            value= "<%= editing ? home.houseName : '' %>"
            placeholder="Name of your house"
            class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          />

          <input type="text" value= "<%=editing ? home.Price : '' %>" name="Price" method="POST" placeholder="Enter the house price for one night" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />

          <input type="text" value= "<%= editing ? home.Rating : '' %>" name="Rating" method="POST" placeholder="Enter Ratings for the house" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />

          <input type="text" value= "<%= editing ? home.Location : '' %>" name="Location" method="POST" placeholder="Enter the house location" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />

          <input type="text" value= "<%= editing ? home.photoUrl : '' %>" name="photoUrl" method="POST" placeholder="Enter image url" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />

          <textarea name="description" placeholder="Enter the description for this house" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"><%= editing ? home.description : '' %></textarea>
          
          <div class="flex justify-center">
            <input 
              type="submit" 
              value="Edit Home"
              class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer"
            >
          </div>
        </form>
      </div>
    </div>
  </body>
</html>